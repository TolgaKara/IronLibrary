<form action="/books" method="POST" enctype="multipart/form-data">
<div class="container">
<div class="form-group">
    <label for="exampleInputTitle">Title: </label>
    <input type="text" name="title" class="form-control" id="exampleInputTitle" aria-describedby="titleHelp" placeholder="Enter the book title">
</div>

 <div class="form-group">
    <label for="exampleInputdescription">Description: </label>
    <input type="text" name="description" class="form-control" id="exampleInputdescription" aria-describedby="descriptionHelp" placeholder="Enter the book description">
</div>

 <div class="form-group">
    <label for="exampleInputrating">Rating</label>
    <input type="number" name="rating" min="1" max="10" class="form-control" id="exampleInputrating" aria-describedby="ratingHelp" placeholder="Enter the book rating">
</div>

<div class="input-group mb-3">
  <div class="custom-file">
    <label for="inputGroupFile01" class="font-weight">Image:</label>
    <input type="file" name='image' class="custom-file-input" id="inputGroupFile01">
    <label class="custom-file-label mt-5" for="inputGroupFile01">Choose a Book cover</label>
  </div>
</div>




  <button type="submit" class="btn btn-success mt-5">Add a book</button>
  </div>
</form>
